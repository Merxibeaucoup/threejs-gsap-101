    }

    .urgency-level {
      font-size: 12px;
      font-weight: 700;
      letter-spacing: 1px;
      opacity: 0.8;
    }

    /* Token Details */
    .token-details {
      background: linear-gradient(135deg, #f8f9fa, #e9ecef);
      padding: 20px 24px;
      border-radius: 12px;
      margin-bottom: 24px;
      border: 1px solid #dee2e6;
    }

    .detail-row {
      display: flex;
