    }

    /* Urgency Message */
    .urgency-message {
      display: flex;
      align-items: flex-start;
      gap: 16px;
      padding: 20px 24px;
      border-radius: 12px;
      border-left: 6px solid;
      margin-bottom: 24px;
      backdrop-filter: blur(5px);
    }

    .message-content {
      flex: 1;
    }

    .message-text {
      margin: 0 0 8px 0;
