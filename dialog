    }

    .detail-row:last-child {
      margin-bottom: 0;
    }

    .label {
      font-weight: 600;
      color: #495057;
    }

    .value {
      font-weight: 700;
      color: #212529;
    }

    .status-value {
      font-weight: 800;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    /* Action Buttons */
    .dialog-actions {
